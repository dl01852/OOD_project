<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical">

    <android.support.v7.widget.CardView
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/card_test"
            card_view:contentPadding="10dp"
            card_view:cardUseCompatPadding="true"
            card_view:cardCornerRadius="4dp"
            card_view:cardElevation="5dp">

        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginEnd="16dp"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
        >

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Topping"
                    android:id="@+id/txtTopping"
                    android:paddingBottom="5dp"
            />
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Description of topping"
                    android:layout_below="@id/txtTopping"
                    android:id="@+id/txtToppingDescription"/>
            <CheckBox
                    android:layout_width="60dp"
                    android:layout_height="35dp"
                    android:text="ADD"
                    android:layout_alignParentEnd="true"
                    android:layout_below="@+id/txtToppingPrice"
                    android:id="@+id/chk_add"
            />

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Price"
                    android:layout_alignParentEnd="true"
                    android:layout_alignStart="@id/chk_add"
                    android:id="@+id/txtToppingPrice"
            />


        </RelativeLayout>

    </android.support.v7.widget.CardView>
</LinearLayout>
